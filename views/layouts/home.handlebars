<head>
    <title>Sammys Magical Blog</title>
</head>
<body>
    <div class="container mt-4"></div>
    {{#if posts.length}}
    {{#each posts}}
    <div class="card mb-3">
        <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
            <h5 class="card-title mb-0">{{title}}</h5>
            <small class="text-white-50">
                Posted By{{user.username}} on {{formatDate createdAt}}
            </small>
        </div>
        <div class="card-body">
            <p class="card-text">{{description}}</p>

                <div class="comments-section mt-3">
                    <br>
                    <h6>Comments:</h6>
                    <div id="comments-{{id}}">
                        {{#each comments}}
                        <div class="comment mb-2">
                            {{content}}-By <strong>{{user.username}}</strong> - <strong>By</strong> {{formatDate createdAt}}
                        </div>
                        {{/each}}
                    </div>
                </div>

                <form id="comment-form " class="comment-form mt-3" data-post-id"{{id}}">
                    <div class="mb-3">
                        <textarea class="form-control comment-text" rows="2" placeholder="Add Comment..." required></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary btn-small">Submit Comment</button>
                </form>
        </div>
    </div>
    {{/each}}
    {{else}}
    <p class="text-center">Waiting For Comments</p>
    {{/if}}
    </div>
    <script src="/public/comment.js"></script>
</body>