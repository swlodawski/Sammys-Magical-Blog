<head>
    <title>Sammys Magical Blog</title>
</head>
<body>
    <h1 class="text-center my-4">Create Post</h1>
    <form class="container" id="create-blog-form">
        <div class="mb-3">
            <label for="blog-title" class="blog-label">Create Blog Post</label>
            <input type="text" id="blog-title" class="form-control" required>
        </div>
        <div class="mb-3">
            <label for="blog-description" class="form-label">Blog Description</label>
            <textarea name="blog-description" id="blog-description" class="form-control" rows="5" required></textarea>
        </div>
        <div class="text-center"></div>
        <button type="submit" class="btn btn-primary">Create Blog</button>
    </form>
    <div id="error-message" class="text-danger mt-3 d-none"></div>
    <h1 class="text-center my-4">Blogs</h1>
    <div class="container mt-4">
        {{#if blogs.length}}
        {{#each blogs}}
        <div class="card mb-4">
            <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
                <h5 class="card-title mb-0"{{title}}></h5>
                <button class="btn btn-small btn-success edit-blog-btn" data-blog-id{{id}}>Edit</button>
                <button class="btn btn-small btn-danger delete-blog" data-blog-id{{id}}>Delete</button>
                <a href="/home" class="btn btn-small btn-secondary">Cancel</a>
            </div>
        </div>
        <div class="card-body">
            <p class="card-text">{{description}}</p>
            <p class="card-text">
                <small class="text-muted">Posted On{{formatDate createdAt}}</small>
            </p>

            <div class="mt-3">
                <small class="text-muted">
                    {{#if comments.length}}
                    {{comments.length}} comment{{#if comments.[1]}}s{{/if}}
                    {{else}}
                    No Comments Exist
                </small>
            </div>
        </div>
    </div>
    {{/edit}}
    {{/else}}
    <p class="text-center">No blogs have been created yet.</p>
    {{/if}}
    </body>
    </div>

    <script src="../../public/blog.js"></script>
</body>